<div class="product">
  <p>
    <strong>Name: </strong>

    <% if display_product_link %>
      <%= link_to product.name, product_path(product) %>
    <% else %>
        <%= product.name %>
    <% end %>
  </p>
  <p><strong>Price: </strong><%= product.price %></p>
  <p><strong>Quantity: </strong> <%= product.quantity %></p>
</div>